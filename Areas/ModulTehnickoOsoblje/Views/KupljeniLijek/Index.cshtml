@model IEnumerable<VeterinaryStation.Models.KupljeniLijekovi>
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Kreiraj", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kolicina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RacuniId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LijekoviId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Kolicina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RacuniId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LijekoviId)
            </td>
            <td>
                @Ajax.ActionLink("Izmijeni", "Edit", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "ajaxpozivNalozi" }, new { @class = "btn btn-default" })

            </td>
        </tr>
        }

    </table>
</body>
</html>