@model IEnumerable<VeterinaryStation.Models.Pacijent>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Kreiraj", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Godiste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumPrijema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlasnikId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrstaId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Godiste)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumPrijema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlasnikId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VrstaId)
            </td>
            <td>
                @Ajax.ActionLink("Izmijeni", "Edit", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "ajaxpozivKorisnici" }, new { @class = "btn btn-default" })

            </td>
        </tr>
        }

    </table>
</body>
</html>
