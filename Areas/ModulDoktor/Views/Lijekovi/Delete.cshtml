@model VeterinaryStation.Areas.ModulDoktor.Models.Lijek
@{
    ViewBag.Title = "Brisanje";
    Layout = null;
}
<h2>Brisanje</h2>
@using (Ajax.BeginForm("Obrisi", "Lijekovi", FormMethod.Post, new AjaxOptions { UpdateTargetId = "ajaxpozivKorisnici" }))
{
    if (TempData["Message"] != null)
    {
        <div>
            <h3>@TempData["Message"]</h3>
        </div>
    }
    @Html.AntiForgeryToken()


    <div>
        <h4>Lijekovi</h4>
        <hr />
        <div class="form-group">

            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Id, Model.listaLijekova.Select(model => new SelectListItem
           {
               Value = model.Id.ToString(),
               Text = model.Naziv
           }).ToList(), null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-default" />

        </div>
    </div>
}